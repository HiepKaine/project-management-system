{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@frontend/common": ["libs/shared/frontend/common/src/index.ts"],
      "@frontend/env/*": ["libs/shared/frontend/common/src/environments/*"],
      "@frontend/models/*": ["apps/frontend/src/app/models/*"],
      "@frontend/shell/*": ["apps/frontend/src/app/+state/shell/*"],
      "@frontend/theme": ["libs/shared/frontend/theme/src/index.ts"],
      "@server/common": ["libs/shared/server/common/src/index.ts"],
      "@server/database": ["libs/shared/server/database/src/index.ts"],
      "@server/env/*": ["libs/shared/server/common/src/environments/*"],
      "@shared/components/*": ["libs/shared/frontend/components/src/lib/*"],
      "@webpress/form": ["libs/shared/frontend/form/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
